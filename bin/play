#!/usr/bin/env php
<?php

if (!defined('DS')) { define('DS', DIRECTORY_SEPARATOR); }

set_time_limit(0);

/**
 *---------------------------------------------------------------
 * Autoloader / Composer
 *---------------------------------------------------------------
 *
 * We need to access our dependencies & autoloaderâ€¦
 */
$container = require __DIR__ . DS . '..' . DS . 'bootstrap.php';

/**
 *---------------------------------------------------------------
 * Initialize Game
 *---------------------------------------------------------------
 *
 * Starts GLFW, load the game entry point and start the game loop.
 */
glfwInit();

// load & start the game
$game = $container->get('game');
$game->start();

// clean up glfw
glfwTerminate();